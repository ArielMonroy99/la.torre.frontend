{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 140,
    "attributePosition": "auto",
    "ignore": [
      "build/*",
      "dist/*",
      "public/*",
      "**/out/*",
      "**/.next/*",
      "**/node_modules/*",
      "**/package-lock.json",
      "**/yarn.lock",
      "**/paraglide/*"
    ]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "build/*",
      "dist/*",
      "public/*",
      "**/out/*",
      "**/.next/*",
      "**/node_modules/*",
      "**/package-lock.json",
      "**/yarn.lock",
      "**/paraglide/*",
      "scripts/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "recommended": true,
        "noDebugger": "off",
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noEmptyBlockStatements": "warn"
      },
      "style": {
        "recommended": true,
        "noShoutyConstants": "warn",
        "noDefaultExport": "off",
        "noNamespaceImport": "off",
        "useFilenamingConvention": "warn",
        "noUselessElse": "warn",
        "noVar": "warn",
        "noUnusedTemplateLiteral": "off",
        "useImportType": "warn",
        "noNonNullAssertion": "off",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false,
            "enumMemberCase": "CONSTANT_CASE"
          }
        }
      },
      "a11y": {
        "recommended": true,
        "noSvgWithoutTitle": "off",
        "noDistractingElements": "error",
        "noRedundantAlt": "error",
        "useAltText": "error",
        "noAccessKey": "error"
      },
      "correctness": {
        "recommended": true,
        "useExhaustiveDependencies": "warn",
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "noChildrenProp": "error",
        "noEmptyPattern": "error",
        "noSelfAssign": "error",
        "noStringCaseMismatch": "error",
        "noUnreachable": "error",
        "noUnsafeFinally": "error",
        "noGlobalObjectCalls": "error",
        "noConstructorReturn": "error",
        "noConstAssign": "error",
        "noConstantCondition": "error",
        "noUndeclaredVariables": "error"
      },
      "complexity": {
        "recommended": true,
        "noForEach": "off",
        "noBannedTypes": "off",
        "useLiteralKeys": "off",
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 25
          }
        }
      }
    },
    "ignore": [
      "next.config.mjs",
      "tailwind.config.ts",
      "**/paraglide/**",
      "build/*",
      "dist/*",
      "public/*",
      "**/out/*",
      "**/node_modules/*",
      "**/.next/*",
      "**/403.*",
      "**/404.*",
      "**/500.*",
      "scripts/*",
      "src/lib/schemas/*",
      "src/_core/lib/schemas/*"
    ]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto"
    }
  }
}
